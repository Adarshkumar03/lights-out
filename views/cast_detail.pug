extends layout

block content
  div(class="card mb-3" style="max-width: 1300px;")
    div(class="row g-0")
      div(class="col-md-4")
        img(src=cast.imageSrc?cast.imageSrc:"/images/default-avatar.png" class="img-fluid rounded-start" alt=cast.fullName crossorigin="anonymous")
      div(class="col-md-8")
        div(class="card-body")
          h1(class="card-title") #{cast.fullName}
          h5(class="card-subtitle mb-2 text-muted") #{cast.lifespan}
          p(class="card-text") #{cast.bio}
  div(style='margin-left:20px;margin-top:20px')

    h4 Movies

    div.movie-list
      each movie in cast_movies
        div.list-item
          a(href=movie.url)
            img(src=movie.imageSrc?movie.imageSrc:"/images/Default_Image_thumbnail.png" alt=movie.name)
          a(href=movie.url) #{movie.name}
          span.movie-rating #{movie.rating}

      else
        p This cast has no movies.
  hr
  p
    a(href=cast.url+'/delete') Delete cast
  p
    a(href=cast.url+'/update') Update cast  
